<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.makena.anew.MainActivity"
    tools:showIn="@layout/activity_main">

    <RelativeLayout
        android:layout_width="381dp"
        android:layout_height="510dp"
        tools:layout_editor_absoluteX="2dp"
        tools:layout_editor_absoluteY="0dp">

        <Button
            android:id="@+id/btn_okay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Okay"
            tools:layout_editor_absoluteX="100dp"
            tools:layout_editor_absoluteY="231dp"
            android:layout_marginTop="123dp"
            android:layout_below="@+id/textView"
            android:layout_alignLeft="@+id/textView"
            android:layout_alignStart="@+id/textView" />

        <Button
            android:id="@+id/btn_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="One"
            tools:layout_editor_absoluteX="109dp"
            tools:layout_editor_absoluteY="112dp"
            android:layout_alignBaseline="@+id/btn_okay"
            android:layout_alignBottom="@+id/btn_okay"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome to this app."
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.396"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.101"
            tools:text="Welcome to this app."
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="27dp" />

        <Button
            android:id="@+id/btn_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Two"
            tools:layout_editor_absoluteX="100dp"
            tools:layout_editor_absoluteY="348dp"
            android:layout_alignBaseline="@+id/btn_okay"
            android:layout_alignBottom="@+id/btn_okay"
            android:layout_toRightOf="@+id/textView"
            android:layout_toEndOf="@+id/textView"
            android:layout_marginLeft="17dp"
            android:layout_marginStart="17dp" />

        <Button
            android:id="@+id/btn_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/btn_two"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/btn_two"
            android:layout_marginBottom="112dp"
            android:text="Register" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
